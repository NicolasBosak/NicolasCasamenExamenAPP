<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NCAppNotas.Views.NCPaginaPrincipal"
             Title="Examen Nicolas Casamen">
    <FlexLayout Direction="Column"
        AlignItems="Center"
        JustifyContent="SpaceEvenly">
        <Label Text="Bienvenido a tu APP de Notas"
        FontSize="18" />
        <Image Source="programacion.jpg"
        HeightRequest="300" />
        <Button Text="Crear Nota"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="OnButtonClicked" />
        <Button Text="Contar Caracteres"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="ContarClicked" />
        <Button Text="Informacion"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="InformacionClicked" />
    </FlexLayout>
</ContentPage>